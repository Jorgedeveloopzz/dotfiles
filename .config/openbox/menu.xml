<?xml version="1.0" encoding="UTF-8"?>
<openbox_menu>
    <menu id="root-menu" label="OpenBox 3">
        <!-- LibreWolf -->
        <item label="Web browser" icon="/usr/share/icons/candy-icons/apps/scalable/firefox.svg">
            <action name="Execute">
                <execute>firefox</execute>
            </action>
        </item>
        <!-- Alacritty -->
        <item label="Terminal" icon="/usr/share/icons/candy-icons/apps/scalable/Alacritty.svg">
            <action name="Execute">
                <execute>alacritty</execute>
            </action>
        </item>
        <!-- VS Code -->
        <item label="IDe" icon="/usr/share/icons/candy-icons/apps/scalable/com.visualstudio.code.svg">
            <action name="Execute">
                <execute>code</execute>
            </action>
        </item>
        <!-- Ranger -->
        <item label="File Manager" icon="/usr/share/icons/candy-icons/apps/scalable/spacefm.svg">
            <action name="Execute">
                <execute>alacritty -e ranger</execute>
            </action>
        </item>
        <!-- Spotify -->
        <item label="Music" icon="/usr/share/icons/candy-icons/apps/scalable/com.spotify.Client.svg">
            <action name="Execute">
                <execute>env LD_PRELOAD=/usr/lib/spotify-adblock.so spotify %U</execute>
            </action>
        </item>
        <separator />
        <menu id="1" label="Development" icon="/usr/share/icons/candy-icons/apps/scalable/applications-development.svg">
            <item label="GDB">
                <action name="Execute">
                    <execute>alacritty -e gdb</execute>
                </action>
            </item>
        </menu>
        <menu id="7" label="Multimedia" icon="/usr/share/icons/candy-icons/apps/scalable/multimedia-volume-control.svg">
           <item label="Spotify" icon="/usr/share/icons/candy-icons/apps/scalable/com.spotify.Client.svg">
               <action name="Execute">
                   <execute>env LD_PRELOAD=/usr/lib/spotify-adblock.so spotify %U</execute>
               </action>
           </item>
            <item label="mpv" icon="/usr/share/icons/candy-icons/apps/scalable/mpv.svg">
                <action name="Execute">
                    <execute>mpv --player-operation-mode=pseudo-gui</execute>
                </action>
            </item>
            <item label="Pavucontrol" icon="/usr/share/icons/candy-icons/apps/scalable/pavucontrol.svg">
                <action name="Execute">
                    <execute>pavucontrol</execute>
                </action>
            </item>
        </menu>
        <menu id="5" label="Network" icon="/usr/share/icons/candy-icons/apps/scalable/internet-web-browser.svg">
            <item label="Firefox" icon="/usr/share/icons/candy-icons/apps/scalable/firefox.svg">
                <action name="Execute">
                    <execute>firefox</execute>
                </action>
            </item>
            <item label="Discord" icon="/usr/share/icons/candy-icons/apps/scalable/discord.svg">
                <action name="Execute">
                    <execute>/usr/share/discord/Discord</execute>
                </action>
            </item>
            <item label="Microsoft Teams" icon="/usr/share/icons/candy-icons/apps/scalable/teams.svg">
                <action name="Execute">
                    <execute>teams</execute>
                </action>
            </item>
            <item label="qBittorrent" icon="/usr/share/icons/candy-icons/apps/scalable/qbittorrent.svg">
                <action name="Execute">
                    <execute>qbittorrent</execute>
                </action>
            </item>
        </menu>
        <menu id="19" label="Shells" icon="/usr/share/icons/candy-icons/apps/scalable/terminal.svg">
            <item label="Alacritty">
                <action name="Execute">
                    <execute>alacritty</execute>
                </action>
            </item>
            <item label="Bash">
                <action name="Execute">
                    <execute>alacritty -e bash --login</execute>
                </action>
            </item>
            <item label="Dash">
                <action name="Execute">
                    <execute>alacritty -e dash -i</execute>
                </action>
            </item>
            <item label="fish">
                <action name="Execute">
                    <execute>alacritty -e fish</execute>
                </action>
            </item>
            <item label="GIT">
                <action name="Execute">
                    <execute>alacritty -e git</execute>
                </action>
            </item>
            <item label="Sh">
                <action name="Execute">
                    <execute>alacritty -e sh --login</execute>
                </action>
            </item>
            <item label="Zsh">
                <action name="Execute">
                    <execute>alacritty -e zsh</execute>
                </action>
            </item>
        </menu>
        <menu id="38" label="Utilities" icon="/usr/share/icons/candy-icons/apps/scalable/applications-utilities.svg">
            <item label="Fonts">
                <action name="Execute">
                    <execute>gnome-font-viewer</execute>
                </action>
            </item>
            <item label="Nitrogen" icon="/usr/share/icons/candy-icons/apps/scalable/AppImageLauncher.svg">
                <action name="Execute">
                    <execute>nitrogen</execute>
                </action>
            </item>
            <item label="Screenshot" icon="/usr/share/icons/candy-icons/apps/scalable/gnome-screenshot.svg">
                <action name="Execute">
                    <execute>gnome-screenshot --interactive</execute>
                </action>
            </item>
        </menu>
        <separator />
        <menu id="40" label="OpenBox" icon="/usr/share/icons/candy-icons/apps/scalable/gnome-monitor.svg">
            <menu id="client-list-menu" />
            <item label="Restart" icon="/usr/share/icons/candy-icons/apps/scalable/system-restart.svg">
                <action name="Restart" />
            </item>
            <separator />
            <item label="Exit" icon="/usr/share/icons/candy-icons/apps/scalable/xedit.svg">
                <action name="Exit" />
            </item>
        </menu>
    </menu>
</openbox_menu>
