### COMMANDS ###

# Terminal emulator
super + Return
	alacritty

# Launcher
super + space
	rofi -show

# Restart configuration file
super + p
	pkill -USR1 -x sxhkd

# Restart bspwm
shift + super + {e,r}
	bspc {quit,wm -r}

# Kill window
super + x
	bspc node -{c,k}

#
# bspwm keybindings
#

# Change to workspace
super + {1,2,3,4,5,6,7,8,9,0}
	bspc desktop -f {I,II,III,IV,V,VI,VII,VIII,IX,X}

# Move window to any workspace and focus on it
super + shift {1-9,0}
	id=$(bspc query -N -n); bspc node -d ^{1-9}; bspc node -f ${id}

# Set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# Volume control
{XF86AudioRaiseVolume,XF86AudioLowerVolume, XF86AudioMute}
	{pactl set-sink-volume @DEFAULT_SINK@ +5%,pactl set-sink-volume @DEFAULT_SINK@ -5%, pactl set-sink-mute @DEFAULT_SINK@ toggle}

# Focus the window in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

