### COMMANDS ###

# Terminal emulator
super + Return
	alacritty

# Launcher
super + space
	rofi -show

# Launch browser
super + b
	firefox

# Restart configuration file
super + p
	pkill -USR1 -x sxhkd

# Restart bspwm
shift + super + {e,r}
	bspc {quit,wm -r}

# Kill window
super + x
	bspc node -{c,k}

#
# bspwm keybindings
#

# Focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# Set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# Volume control
{XF86AudioRaiseVolume,XF86AudioLowerVolume, XF86AudioMute}
	{pactl set-sink-volume @DEFAULT_SINK@ +5%,pactl set-sink-volume @DEFAULT_SINK@ -5%, pactl set-sink-mute @DEFAULT_SINK@ toggle}

# Brightness control
{XF86MonBrightnessUp, XF86MonBrightnessDown}
	{xbacklight -inc 10, xbacklight -dec 10}

# Focus the window in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

