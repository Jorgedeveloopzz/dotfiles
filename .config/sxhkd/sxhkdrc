### COMMANDS ###

# Terminal emulator
alt + Return
	alacritty

# Launcher
alt + space
	rofi -show

# Restart configuration file
alt + p
	pkill -USR1 -x sxhkd

# Restart bspwm
shift + alt + {q,r}
	bspc {quit,wm -r}

# Kill window
alt + x
	bspc node -{c,k}

# Change to workspace
alt + {1,2,3,4,5,6,7,8,9,0}
	bspc desktop -f {I,II,III,IV,V,VI,VII,VIII,IX,X}

# Move window to workspace
alt + shift {1-9,0}
	bspc node -d '^{1-9,10}'

