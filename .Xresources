! COLORS FOR SXIV
Sxiv.foreground: #FFFFFF
Sxiv.background: #16161d
Sxiv.font: DaddyTimeMono Nerd Font-12

! Scale external monitors
Xft.dpi: 96

! Cursor size
Xcursor.size: 24

! URXVT CONFIGURATION

! Disable scrollbar
URxvt.scrollBar: false

! Fonts
URxvt.font: xft:CaskaydiaCove Nerd Font:size=11
URxvt.letterSpace: -1
URxvt.saveLines: 2000

!Clipboard
URxvt.clipboard.autocopy: true
URxvt.keysym.M-c: perl:clipboard:copy
URxvt.keysym.M-v: perl:clipboard:paste


